# Shipfile
# Step 1: Install system dependencies needed for WeasyPrint (PDF generation)
packages: build-essential python3-dev python3-cffi libcairo2 libpango-1.0-0 libpangocairo-1.0-0 libgdk-pixbuf-xlib-2.0-0 libffi-dev shared-mime-info 
script: |
  # Step 2: Install all dependencies from requirements.txt, including Flask-Babel
  pip install -r requirements.txt
  python deploy.py

run: gunicorn wsgi:app -b 0.0.0.0:80 --reload --worker-class gthread --workers 2 --threads 4 --timeout 120